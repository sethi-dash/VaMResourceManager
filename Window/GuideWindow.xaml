<Window x:Class="Vrm.Window.GuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Vrm.Util"
        Title="User Guide" Height="400" Width="600">

    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{x:Static local:Texts.GuideText}"
                       TextWrapping="Wrap"
                       FontFamily="Consolas"
                       FontSize="12" />
        </ScrollViewer>
    </Grid>
</Window>